<div class="card">
  <div class="card-header">
    <%= link_to lesson.title, lesson_path(lesson) %>
  </div>
  <div class="card-body">
    <%= lesson.content %>
    <br/>
    <%= lesson.course %>
  </div>
  <div class="card-footer">
    <%= link_to "Edit", edit_lesson_path, class: "btn btn-warning" %>
    <%= link_to "Destroy", lesson_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  </div>
</div>
