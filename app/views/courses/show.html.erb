<%= link_to "Courses", courses_path, class: "btn btn" %>
/
<%= link_to @course.title, course_path(@course) %>

<div class="row">
  <div class="col-lg-6">
    <%= render 'courses/course', course: @course %>
  </div>
  <div class="col-lg-6">
    <%= link_to "Add Lesson", new_course_lesson_path(@course, @lesson), class: "btn btn-primary btn-sm mb-3" %>
    <% @lessons.each do |lesson| %>
      <%= render 'lessons/lesson', lesson: lesson %>
    <% end %>
  </div>
</div>
